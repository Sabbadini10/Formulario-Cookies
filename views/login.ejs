<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head', {
        title : 'Login'
    })  %> 
<% if (locals.user && user.color === 'orange') { %>
  <body class="register" style="background-color: orange;">
<% } else if(locals.user && user.color  === 'green'){ %>
   <body class="register" style="background-color: green;">
 <% } else if(locals.user && user.color === 'red'){ %>
  <body class="register" style="background-color: red;">
  <% } else {%>
      <body class="register" style="background-color: white;">
      <% }%>


 <%- include('./partials/header')  %> 

    <main>
        <section class="register__main__section general__main__section">
            <h1 class="text-center">Ingres√°</h1>
          <form action="" class="form" method="POST">
            <div class="mb-3 row">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                  <input type="email" class="form-control" name="email" id="email" value="<%= locals.old && old.email ? old.email : null %>" placeholder="JackDaniels@JackDaniels">
                  <small class="form-text-error"><%= locals.errors && errors.email ? errors.email.msg :null %></small>
                </div>
              </div>
              <div class="mb-3 row">
                <label for="password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                  <input type="password" class="form-control" id="password" name="password" value="<%= locals.old && old.password ? old.password : null %>" placeholder="1234">
                  <small class="form-text-error"><%= locals.errors && errors.password ? errors.password.msg :null %></small>
                </div>
              </div>
                <div class="form__box form__box--flex">
                    <input class="form__checkbox" type="checkbox" id="remember" name="remember">
                    <label class="form-label" for="remember">Recordame</label>
                </div>
                <div class="d-flex gap-5 justify-content-center" role="group" aria-label="Basic example">
                    <button type="reset" class="btn btn-danger">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Ingresa</button>
                    </div>
          </form>
        </section>
    </main>
</body>

</html>